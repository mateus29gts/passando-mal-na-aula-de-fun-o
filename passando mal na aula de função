    public static char [] letrasDaPalavra(String minhaPalavra){
        char [] caracteres = new char [minhaPalavra.length()];
        for (int i = 0; i<minhaPalavra.length (); i++){
            caracteres [i] = '_';
           
        }    
        return caracteres; 
    
    
    }
